{% extends
'AppBundle::nocol-layout.html.twig' %} {% block title %}Login{% endblock %}

{% block main_content %}
    <div class="col-lg-6">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData) }}</div>
        {% endif %}

        <form action="{{ path('mm_login_check') }}" method="post">
            <div class="well">
                <div class="form-group">

                    <label class="control-label" for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required/>
                </div>
                <div class="form-group">
                    <label class="control-label" for="password">Password:</label>
                    <input type="password" id="password" name="_password" required/>
                </div>
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button type="submit" class=" btn btn-od">Login</button>
            </div>
        </form>
    </div>
{% endblock %}