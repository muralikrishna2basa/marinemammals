<h2>Add new person</h2>
{{ form_start(pform, {'method': 'POST','action': path('mm_persons_add_create')}) }}
<fieldset>
    <div class="form-inline">{{ form_row(pform.firstName,{'label':'First name'}) }}</div>
    <div class="form-inline">{{ form_row(pform.lastName,{'label':'Last name'}) }}</div>
    <div class="form-inline">{{ form_row(pform.address, {'label':'Address', 'attr': {'placeholder': '<street> <streetnumber>, <postal code> <municipality>'} }) }}</div>
    <div class="form-inline">{{ form_row(pform.iteSeqno, {'label':'Institute'}) }}</div>
    <div class="form-inline">{{ form_row(pform.phoneNumber, {'label':'Phone number', 'attr': {'placeholder': 'dd(d)(d)/dddddd(d)'} }) }}</div>
    <div class="form-inline">{{ form_row(pform.email, {'label':'mail'}) }}</div>
    <div class="form-inline">{{ form_row(pform.sex, {'label':'Sex'}) }}</div>
    <div class="form-inline">{{ form_row(pform.title, {'label':'Title'}) }}</div>
    <div class="form-inline">{{ form_row(pform.idodId, {'label':'IDOD id', 'attr': {'placeholder': 'verify in IDOD, add there if needed'} }) }}</div>
</fieldset>
<p>
    <input type="submit" value="Submit">
</p>
{{ form_end(pform) }}
