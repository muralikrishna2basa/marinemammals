    <h2>List of persons</h2>
    <table>
        <thead>
        <tr>
            <th>first name</th>
            <th>last name</th>
            <th>email</th>
        </tr>
        </thead>
        {% for person in persons %}
            <tr>
                <td>{{person.firstName}}</td>
                <td>{{person.lastName}}</td>
                <td>{{person.email}}</td>
            </tr>
        {% else %}
            <tr>
                <td>No persons found.</td>
            </tr>
        {% endfor %}
    </table>